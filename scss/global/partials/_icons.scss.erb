@font-face {
	font-family: "<%= fontName %>";
	src: url('<%= fontPath %><%= fontName %>.eot?v' + $appVersion);
	src: url('<%= fontPath %><%= fontName %>.eot?v' + $appVersion + '#iefix') format('embedded-opentype'),
		url('<%= fontPath %><%= fontName %>.woff2?v' + $appVersion) format('woff2'),
		url('<%= fontPath %><%= fontName %>.woff?v' + $appVersion) format('woff'),
		url('<%= fontPath %><%= fontName %>.ttf?v' + $appVersion) format('truetype'),
		url('<%= fontPath %><%= fontName %>.svg?v' + $appVersion + '#<%= fontName %>') format('svg');
	font-weight: normal;
	font-style: normal;
}

.<%= className %> {
	display: inline-block;
	font: normal normal normal 14px/1 "<%= fontName %>";
	font-size: inherit;
	position: relative;
	text-rendering: auto;
	top: 2px;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.<%= className %>--lg {
	font-size: 1.3333333333333333em;
	line-height: 0.75em;
	vertical-align: -15%;
}
.<%= className %>--2x { font-size: 2em; }
.<%= className %>--3x { font-size: 3em; }
.<%= className %>--4x { font-size: 4em; }
.<%= className %>--5x { font-size: 5em; }

.<%= className %>--fw {
	width: 1.2857142857142858em;
	text-align: center;
}

.<%= className %>--pulse {
	animation: icon-spin 1s infinite steps(8);
}

.<%= className %>--spin {
	animation: icon-spin 2s infinite linear;
}

@keyframes icon-spin {
	0% {
		transform: rotate(0deg);
	}

	100% {
		transform: rotate(359deg);
	}
}

.<%= className %>--rotate-90deg {
	transform: rotate(90deg);
}

.<%= className %>--rotate-180deg {
	transform: rotate(180deg);
}

.<%= className %>--rotate-270deg {
	transform: rotate(270deg);
}

<% _.each(glyphs, function(glyph) { %>
.<%= className %>-<%= glyph.name %>::before, //@deprecated Use double dashes as BEM modificator
.<%= className %>--<%= glyph.name %>::before {
	content: "\<%= glyph.unicode[0].charCodeAt(0).toString(16).toUpperCase() %>"
}
<% }); %>
