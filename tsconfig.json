{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Browser",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "jsx": "react",
    "target": "es2020",
    "outDir": ".build",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["es2020", "dom"],
    "rootDir": "./"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "app/**/*.js",
    "app/**/*.jsx",
    "app/**/*.ts",
    "app/**/*.tsx",
  ]
}
